@model NGO_Organization.Models.tbl_Donations

@{
    ViewBag.Title = "Donate";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<style>
    .number {
        font-size: 42px;
        line-height: 14px;
        float: left;
        width: 100%;
        padding: 15px 30px;
        margin-bottom: 0;
        -webkit-box-shadow: 0 0 18px rgba(0,0,0,0.14);
        -ms-box-shadow: 0 0 18px rgba(0,0,0,0.14);
        -o-box-shadow: 0 0 18px rgba(0,0,0,0.14);
        box-shadow: 0 0 18px rgba(0,0,0,0.14);
        background-color: #fff;
        color: #777777;
        border: none;
        height: 60px;
        -webkit-border-radius: 5px;
        border-radius: 5px;
    }
</style>


<section class="cp-inner-banner-section">
    <div class="container">
        <div class="cp-breadcrumb-outer">
            <div class="row">
                <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                    <div class="cp-inner-banner-info">
                        <h1>MAKE A DONATION</h1>
                        <p>It is a long established fact that a reader will be distracted.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index","Home")">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Donatation</li>
                    </ol>
                </div>
                <section class="cp-blog-section cp-project-detail-section pd-tb100 d-flex justify-content-center ">
                    <div style="width: 700px; padding-top: 50px; border-radius: 10px;" class=" d-flex justify-content-center">

                        <div class="widget col-md-10 mx-auto">
                            <h4 class="mb-4 text-white" style="text-transform: uppercase; font-size: 30px; text-align: center;">Donation details</h4>
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()

                        <div method="get" class="cp-donation-form ">
                            <div class="inner-holder mb-4">
                                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control ", placeholder = "Full Name" } })
                                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                            </div>

                            <div class="inner-holder mb-0">
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control ", placeholder = "Email" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="inner-holder mb-4">
                                @Html.HiddenFor(model => model.DonationDateTime, new { @Value = System.DateTime.Now })
                                @Html.ValidationMessageFor(model => model.DonationDateTime, "", new { @class = "text-danger" })
                            </div>

                            <div class="inner-holder mb-4">
                                @Html.DropDownListFor(model => model.CauseID, ViewBag.Causes as SelectList, "Select Cause ", new { @class = "form-control js-example-basic-single w-100 number" })
                                @Html.ValidationMessageFor(model => model.CauseID, "", new { @class = "text-danger" })
                            </div>
                            <div class="inner-holder mb-5">
                                @Html.EditorFor(model => model.DonationAmount, new { htmlAttributes = new { @class = "form-control number", placeholder = "Donation Amount" } })
                                @Html.ValidationMessageFor(model => model.DonationAmount, "", new { @class = "text-danger" })
                            </div>
                            <div >
                                <h4 class="mb-4 text-white" style="text-transform: uppercase; font-size: 30px; text-align: center;">Payment Details</h4>

                            </div>


                            <div class="inner-holder">
                                @Html.DropDownListFor(model => model.CardName, ViewData["ForCardList"] as List<SelectListItem>, new { @class = "form-control js-example-basic-single w-100 number" })
                                @Html.ValidationMessageFor(model => model.CardName, "", new { @class = "text-danger" })
                            </div>

                            <div class="inner-holder">
                                @Html.EditorFor(model => model.CardNumber, new { htmlAttributes = new { @class = "form-control number ", placeholder = "Card Number" } })
                                @Html.ValidationMessageFor(model => model.CardNumber, "", new { @class = "text-danger" })
                            </div>

                            <div class="inner-holder">
                                @Html.EditorFor(model => model.CardOwner, new { htmlAttributes = new { @class = "form-control number ", placeholder = "Card Owner" } })
                                @Html.ValidationMessageFor(model => model.CardOwner, "", new { @class = "text-danger" })
                            </div>
                            <div >
                                <h4 class="mb-0 text-white" style="color: white; text-align: start; font-size: 14px; text-transform: uppercase;">Expiry Date</h4>

                            </div>

                            <div class="inner-holder row px-0">
                                <div class="col-md-6 p-0 px-3 ">
                                    @Html.EditorFor(model => model.CExpirydate, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @class = "form-control number mr-0 ", placeholder = "Expiration Date", @type = "date" } })
                                    @Html.ValidationMessageFor(model => model.CExpirydate, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 pr-0  pl-4">
                                    @Html.EditorFor(model => model.CVCode, new { htmlAttributes = new { @class = "form-control number mr-0", placeholder = "CV Code" } })
                                    @Html.ValidationMessageFor(model => model.CVCode, "", new { @class = "text-danger" })
                                </div>
                             

                             
                            </div>

                            <div class="inner-holder">
                              
                            </div>


                            <div class="inner-holder">
                                <button class="cp-btn-style btn-submit" type="submit" name="submit">
                                    Donate Now
                                </button>
                            </div>
                        </div>

                            }
                        </div>

                    </div>
                </section>
            </div>
        </div>
    </div>

  
</section>


