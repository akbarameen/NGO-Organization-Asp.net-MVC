<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signup</title>
    <!-- Font Icon -->
    <link rel="stylesheet" href="~/Content/Registration/fonts/material-icon/css/material-design-iconic-font.min.css">

    <!-- Main css -->
    <link rel="stylesheet" href="~/Content/Registration/css/style.css">
    <style>
        .text-danger {
            color: red;
        }
    </style>
</head>
<body>


    <div class="main">

        <section class="signup">
            @*<img src="~/Content/Registration/images/signup-bg.jpg" alt="">*@
            <div class="container">
                @using (Html.BeginForm("LoginUser", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="signup-content">
                        <div method="POST" id="signup-form" class="signup-form">
                            <h2 class="form-title">Login </h2>


                            <div class="form-group">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = " form-input", @Placeholder = "Username" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>



                            <div class="form-group">
                                @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = " form-input", @Placeholder = "Password" } })
                                @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                                @if (ViewBag.ErrorMessage != null)
                                {
                                    <div style="color: red">@ViewBag.ErrorMessage</div>
                                }


                            </div>


                            <div class="form-group">
                                <input style="cursor: pointer;" type="submit" name="submit" id="submit" class="form-submit" value="Sign In" />
                            </div>
                        </div>
                        <p class="loginhere">
                            Don't Have an account?  <a href="@Url.Action("Signup", "Home")" class="loginhere-link">Sign Up here</a>
                        </p>
                    </div>

                }
            </div>
        </section>

    </div>



    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>


    <!-- JS -->
    <script src="~/Content/Registration/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Registration/js/main.js"></script>
</body>
</html>

