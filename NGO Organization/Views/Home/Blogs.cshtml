@model IEnumerable<NGO_Organization.Models.tbl_Blogs>

@{
    ViewBag.Title = "Blogs";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}



<section class="cp-inner-banner-section">
    <div class="container">
        <div class="cp-breadcrumb-outer">
            <div class="row">
                <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12">
                    <div class="cp-inner-banner-info">
                        <h1>Our Blogs</h1>
                        <p>It is a long established fact that a reader will be distracted.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index","Home")">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Blogs</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="cp-main-content">
    <section class="cp-blog-section pd-tb100">
        <div class="container">
            <div class="row">


                @foreach (var item in Model)
                {

                    if (item.BlogStatus == 1)
                    {

                    <div class="col-lg-4 col-sm-6  col-xs-12">
                        <div class="cp-blog-item">
                            <figure class="cp-thumb">
                                <img src="@Url.Content(item.BlogImage)" style="height: 300px;" alt="">
                            </figure>
                            <div class="cp-text">

                                <h5><a href="@Url.Action("BlogsDetails", "Home", new { id = item.BlogID })"> @Html.DisplayFor(modelItem => item.BlogTitle)</a></h5>

                                <p style="height: 70px; overflow:hidden;">
                                    @Html.DisplayFor(modelItem => item.BlogDescription)
                                </p>
                                @Html.ActionLink("More Details", "BlogsDetails", new { id = item.BlogID }, htmlAttributes: new { style = "text-decoration: none; ", @class = "cp-btn-style_v3" }) 
                                <div class="bottom-holder bottom-line mt-4">
                                    <ul class="meta-listed">
                                        <li>

                                            @Html.DisplayFor(modelItem => item.tbl_Admins.AdminFirstName)
                                        </li>
                                        <li><i class="fa fa-clock-o" aria-hidden="true"></i>   @Convert.ToDateTime(item.BlogDateTime).ToString("dd MMM, yyyy")</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                }
                </div>
            <div class="cp-pagination-row mb-50 text-center">
                <nav class="cp-pagination-listed">
                    <ul class="pagination justify-content-center">
                        <li class="page-item"><a class="page-link" href="#">Prev</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>
</div>

