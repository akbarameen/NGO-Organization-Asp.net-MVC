@model NGO_Organization.Models.tbl_Users

@{
    Layout = null;
}


@Html.Raw(TempData["SignupMessage"])
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Signup</title>
    <!-- Font Icon -->
    <link rel="stylesheet" href="~/Content/Registration/fonts/material-icon/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" >
    <!-- Main css -->
    <link rel="stylesheet" href="~/Content/Registration/css/style.css">
    <style>
        .text-danger {
            color: red;
        }
    </style>
</head>
<body>


    <div class="main">

        <section class="signup">
            @*<img src="~/Content/Registration/images/signup-bg.jpg" alt="">*@
            <div class="container">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="signup-content ">
                        <div method="POST" id="signup-form" class="signup-form">
                            <h2 class="form-title">Register Now</h2>
                            @if (ViewBag.signup != null)
                            {
                                <div class="alert alert-success">@ViewBag.signup</div>
                            }
                        
                            <div class="form-group">
                                @Html.EditorFor(model => model.UserFirstName, new { htmlAttributes = new { @class = "form-input", @Placeholder = "First Name" } })
                                @Html.ValidationMessageFor(model => model.UserFirstName, "", new { @class = "text-danger" })
                            </div>

                        
                          
                            <div class="form-group">
                                @Html.EditorFor(model => model.UserLastName, new { htmlAttributes = new { @class = " form-input", @Placeholder = "Last Name" } })
                                @Html.ValidationMessageFor(model => model.UserLastName, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = " form-input", @Placeholder = "Choose Username" } })
                                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            </div>


                            <div style="margin-left:15px;" class="form-group">
                                <p style="margin-bottom: 15px;">Select Gender</p>
                                Male
                                @Html.RadioButtonFor(model => model.UserGender, "Male", new { htmlAttributes = new { @class = " form-input", @Value = "Male" } })
                                Female
                                @Html.RadioButtonFor(model => model.UserGender, "Female", new { htmlAttributes = new { @class = " form-input" } }) <br />

                                @Html.ValidationMessageFor(model => model.UserGender, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = " form-input", @Placeholder = "Your Email" } })
                                @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.UserPassword, new { htmlAttributes = new { @class = " form-input", @Placeholder = "Password" } })
                                @Html.ValidationMessageFor(model => model.UserPassword, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.EditorFor(model => model.UserConfirmPassword, new { htmlAttributes = new { @class = " form-input", @Placeholder = "Confirm Password" } })
                                @Html.ValidationMessageFor(model => model.UserConfirmPassword, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                <input style="cursor: pointer;" type="submit" name="submit" id="submit" class="form-submit" value="Sign up" />
                            </div>
                        </div>
                        <p class="loginhere">
                            Have already an account ? <a href="@Url.Action("LoginUser", "Home")" class="loginhere-link">Login here</a>
                        </p>
                    </div>

                }
            </div>
        </section>

    </div>



    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>


    <!-- JS -->
    <script src="~/Content/Registration/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/Registration/js/main.js"></script>
</body>
</html>



