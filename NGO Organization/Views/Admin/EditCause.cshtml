@model NGO_Organization.Models.tbl_DonationCauses

@{
    ViewBag.Title = "EditCause";
}


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Add new Cause to your list
        </h3>

    </div>
    <div class="row grid-margin">
        <div class="col-12 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Add Cause information below</h4>
                    @using (Html.BeginForm("EditCause", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.CauseID)

                    <div class="form-group">
                        @Html.LabelFor(model => model.CauseName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.CauseName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CauseName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CauseDiscription, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.TextAreaFor(model => model.CauseDiscription, new { cols = 35, @rows = 6, @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CauseDiscription, "", new { @class = "text-danger" })
                        </div>
                    </div>



                    <div class="form-group">
                        @Html.LabelFor(model => model.AdminID, "AdminID", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            @Html.EditorFor(model => model.AdminID, new { htmlAttributes = new { @class = "form-control" } })
                            @*@Html.DropDownList("AdminID", null, htmlAttributes: new { @class = "form-control" })*@
                            @Html.ValidationMessageFor(model => model.AdminID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CauseImage, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-12">
                            <input type="file" name="CauseImgFile" style="margin-top: 5px" value="" required />
                            <div class="text-danger"> @ViewBag.SizeErrorMessage</div>
                            <div class="text-danger"> @ViewBag.ExtensionErrorMessage</div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-12">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                    }

                    <div>
                        @Html.ActionLink("Back to Causes", "CausesList")
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
