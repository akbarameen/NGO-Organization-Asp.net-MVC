@model NGO_Organization.Models.tbl_VolunteerTypes

@{
    ViewBag.Title = "AddVolunteerTypes";
}


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Add Volunteer Type
        </h3>

    </div>
    <div class="row grid-margin">
        <div class="col-12 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Add Volunteer Type Information</h4>


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.VolunteerTypeName, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.VolunteerTypeName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.VolunteerTypeName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-12">
                                    <input type="submit" value="Add Title" class="btn btn-inverse-primary" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Back to Volunteer types List", "VolunteerTypesList")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>