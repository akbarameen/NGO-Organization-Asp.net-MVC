@model NGO_Organization.Models.tbl_DonationCauses

@{
    ViewBag.Title = "CauseDetails";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Cause Details
        </h3>

    </div>
    <div class="row grid-margin">
        <div class="col-12 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Details of the title  "@Html.DisplayFor(model => model.CauseName)"  Are listed below </h4>


                    <div>
                        <h4>tbl_DonationCauses</h4>
                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                ID
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CauseID)
                            </dd>
                            <dt>
                                Name
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CauseName)
                            </dd>

                            <dt>
                                Description
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CauseDiscription)
                            </dd>

                            <dt>
                                Image
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.CauseImage)
                            </dd>

                            <dt>
                                Added by
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.tbl_Admins.AdminFirstName)
                            </dd>

                        </dl>
                    </div>
                    <p>
                        @Html.ActionLink("Edit", "EditCause", new { id = Model.CauseID }) |
                        @Html.ActionLink("Back to Causes", "CausesList")
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>