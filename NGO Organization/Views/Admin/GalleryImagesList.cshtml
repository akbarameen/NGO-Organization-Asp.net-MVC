@model IEnumerable<NGO_Organization.Models.tbl_Gallaries>

@{
    ViewBag.Title = "Gallery Images";
}

@Html.Raw(TempData["AddGalleryMessage"])
@Html.Raw(TempData["EditGalleryMessage"])


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Gallery
        </h3>

        <p>
            @Html.ActionLink("+ Add new Image", "AddGalleryImage", "Admin", new { @class = "btn btn-primary ml-3" })
        </p>
    </div>
    <div class="card-columns">
        @foreach (var item in Model)
        {


            <div class="card">
                <img class="card-img-top" src="@Url.Content(item.GallaryImage)" style="height: 200px; width: 100%; " />
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.GallaryTitle)</h4>
                    <div class="d-flex align-content-center justify-content-between" >
                        <div>
                            @{
                                if (item.ImageStatus == 1)
                                {
                                    <span class="badge badge-outline-success badge-pill">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-outline-danger badge-pill">Deactive</span>
                                }
                            }
                        </div>
                        <div class="align-content-center">
                            @Html.ActionLink("Edit", "EditGalleryImage", new { id = item.Gid }) 

                           
                        </div>
                    
                       
                    </div>
                  

                  
                </div>
            </div>


        }
    </div>
</div>
