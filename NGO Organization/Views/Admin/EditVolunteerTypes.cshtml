@model NGO_Organization.Models.tbl_VolunteerTypes

@{
    ViewBag.Title = "EditVolunteerTypes";
}
@Html.Raw(TempData["AddTitleMessage"])
@Html.Raw(TempData["EditTitleMessage"])
<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Edit Volunteer Title
        </h3>

    </div>
    <div class="row grid-margin">
        <div class="col-12 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Change Volunteer title Informations if you want</h4>


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.VolunteerTypeID)

                            <div class="form-group">
                                @Html.LabelFor(model => model.VolunteerTypeName, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-12">
                                    @Html.EditorFor(model => model.VolunteerTypeName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.VolunteerTypeName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-12">
                                    <input type="submit" value="Save Changes" class="btn btn-inverse-warning" />
                                </div>
                            </div>
                        </div>
                    }

                    <div>
                        @Html.ActionLink("Back to Volunteer Titles", "VolunteerTypesList")
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>