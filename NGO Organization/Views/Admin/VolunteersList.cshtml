@model IEnumerable<NGO_Organization.Models.tbl_Volunteers>

@{
    ViewBag.Title = "VolunteersList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Our Volunteers
        </h3>

    </div>
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">List of our Volunteers</h4>
                    @*<p class="page-description"> Click on <code>Details</code> to check further inforamtion</p>*@
                    <div class="row">
                        <div class="table-sorter-wrapper col-lg-12 table-responsive">
                            <table id="sortable-table-1" class="table">
                                <thead>

                                    <tr>
                                        <th class="sortStyle">
                                            @Html.DisplayNameFor(model => model.VolunteerID)<i class="fa fa-angle-down"></i>
                                        </th>
                                        <th class="sortStyle">
                                            @Html.DisplayNameFor(model => model.VolunteerName)<i class="fa fa-angle-down"></i>
                                        </th>
                                        <th class="sortStyle">
                                            @Html.DisplayNameFor(model => model.VolunteerEmail)<i class="fa fa-angle-down"></i>
                                        </th>
                                        <th class="sortStyle">
                                            @Html.DisplayNameFor(model => model.tbl_VolunteerTypes.VolunteerTypeName)<i class="fa fa-angle-down"></i>
                                        </th>
                                        <th></th>
                                    </tr>
                                 

                             

                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VolunteerID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VolunteerName)
                                        </td>
                                       
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VolunteerEmail)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.tbl_VolunteerTypes.VolunteerTypeName)
                                        </td>
                                        <td>

                                            @Html.ActionLink("Details", "Details", new { id = item.VolunteerID })

                                        </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- content-wrapper ends -->