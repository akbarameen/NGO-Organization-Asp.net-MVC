@model IEnumerable<NGO_Organization.Models.tbl_Admins>

@{
    ViewBag.Title = "Admins";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Admins
        </h3>
        
    </div>
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">List of Admins</h4>
                    @*<p class="page-description"> Click on <code>Details</code> to check further inforamtion</p>*@
                    <div class="row">
                        <div class="table-sorter-wrapper col-lg-12 table-responsive">
                            <table id="sortable-table-1" class="table">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th class="sortStyle">@Html.DisplayNameFor(model => model.AdminFirstName)<i class="fa fa-angle-down"></i></th>
                                        <th class="sortStyle"> @Html.DisplayNameFor(model => model.AdminUsername)<i class="fa fa-angle-down"></i></th>
                                        <th class="sortStyle"> @Html.DisplayNameFor(model => model.AdminEmail)<i class="fa fa-angle-down"></i></th>
                                       
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdminID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdminFirstName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdminUsername)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.AdminEmail)
                                        </td>

                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- content-wrapper ends -->