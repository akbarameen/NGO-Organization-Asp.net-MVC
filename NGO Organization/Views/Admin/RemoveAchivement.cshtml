@model NGO_Organization.Models.tbl_Achivements

@{
    ViewBag.Title = "RemoveAchivement";
}

<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Confirmation
        </h3>

    </div>
    <div class="row grid-margin">
        <div class="col-12 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Are you sure you want to delete this Achivement?</h4>
                    <div>

                        <hr />
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.AchiveTitle)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.AchiveTitle)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.AchiveImage)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.AchiveImage)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.AchiveDescription)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.AchiveDescription)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.AchiveDateTime)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.AchiveDateTime)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.tbl_Admins.AdminFirstName)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.tbl_Admins.AdminFirstName)
                            </dd>

                        </dl>

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete Anyway" class="btn btn-inverse-warning" /> |
                                @Html.ActionLink("Back to Achivements", "Achivements")
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
