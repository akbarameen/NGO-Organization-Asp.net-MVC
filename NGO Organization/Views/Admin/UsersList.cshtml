@model IEnumerable<NGO_Organization.Models.tbl_Users>

@{
    ViewBag.Title = "UsersList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <div class="page-header">
        <h3 class="page-title">
            Our Users
        </h3>

    </div>
    <div class="row">
        <div class="col-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">List of Registered Users</h4>
                    @*<p class="page-description"> Click on <code>Details</code> to check further inforamtion</p>*@
                    <div class="row">
                        <div class="table-sorter-wrapper col-lg-12 table-responsive">
                            <table id="sortable-table-1" class="table">
                                <thead>
                                    <tr>
                                        <th class="sortStyle">
                                            @Html.DisplayNameFor(model => model.UserID)<i class="fa fa-angle-down"></i>
                                        </th>
                                      
                                        <th class="sortStyle">
                                           Full Name<i class="fa fa-angle-down"></i>
                                        </th>
                                       
                                        <th class="sortStyle">
                                            @Html.DisplayNameFor(model => model.UserName)<i class="fa fa-angle-down"></i>
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.UserGender)<i class="fa fa-angle-down"></i>
                                        </th>
                                        <th class="sortStyle">
                                            @Html.DisplayNameFor(model => model.UserEmail)<i class="fa fa-angle-down"></i>
                                        </th>
                                      
                                     
                                        <th></th>
                                    </tr>
                              
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserID)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserFirstName) @Html.DisplayFor(modelItem => item.UserLastName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserGender)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserEmail)
                                        </td>
                                   
                                        @*<td>
                                      
                                            @Html.ActionLink("Details", "Details", new { id = item.UserID }) 
                                    
                                        </td>*@
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<!-- content-wrapper ends -->